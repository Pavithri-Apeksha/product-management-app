@page
@model IndexModel

@{
    ViewData["Title"] = "Home page";
}

<!-- Hero Section -->
<div class="hero-section text-white d-flex align-items-center justify-content-center text-center">
    <div>
        <h1 class="display-4 fw-bold animated-title">Welcome to ItemizePro</h1>
        <p class="lead animated-subtitle">
            Smart shopping made easy – discover your favorite products today!
        </p>
        <a href="/ProductPage" class="custom-browse-btn">Browse Products</a>
    </div>
</div>

<!-- Highlights Section -->
<div class="container my-5">
    <div class="text-center mb-4">
        <h2>Why Choose Us?</h2>
        <p class="text-muted">We offer quality, convenience, and the best shopping experience.</p>
    </div>

    <div class="row">
        <!-- Feature 1: Quality -->
        <div class="col-md-4 text-center">
            <img src="https://cdn-icons-png.flaticon.com/512/1170/1170576.png" alt="Quality" width="80" />
            <h5 class="mt-3">Top Quality</h5>
            <p>Handpicked products from trusted brands.</p>
        </div>

        <!-- Feature 2: Fast Delivery -->
        <div class="col-md-4 text-center">
            <img src="https://cdn-icons-png.flaticon.com/512/3076/3076129.png" alt="Fast Shipping" width="80" />
            <h5 class="mt-3">Fast Delivery</h5>
            <p>Lightning-fast shipping on all orders.</p>
        </div>

        <!-- Feature 3: Support -->
        <div class="col-md-4 text-center">
            <img src="https://cdn-icons-png.flaticon.com/512/888/888879.png" alt="Support" width="80" />
            <h5 class="mt-3">24/7 Support</h5>
            <p>Always here to help you with your queries.</p>
        </div>
    </div>
</div>
